@model Shellty_Blog.Models.BlogPost

@{
ViewData["Title"] = "Create New Post";
var categories = ViewBag.Categories as List<string>;
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <h2 class="section-title mb-4">Create New Post</h2>

        <div class="form-card">
            <form asp-action="CreatePost" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Post Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Enter a catchy title..." />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Category" class="form-label">Category</label>
                    <input asp-for="Category" class="form-control" list="categoryList" placeholder="e.g., Behavior, Lifestyle..." />
                    <datalist id="categoryList">
                        @if (categories != null)
                        {
                        @foreach (var cat in categories)
                        {
                        <option value="@cat"></option>
                        }
                        }
                    </datalist>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Cover Image</label>
                    <input type="file" name="image" id="imageInput" class="form-control" accept=".jpg,.jpeg,.png,.webp,.gif" />
                    <small class="text-muted">Max 2 MB. JPG, PNG, WebP or GIF.</small>
                    <div id="imagePreview" class="mt-2" style="display: none;">
                        <img id="previewImg" src="data:," class="img-fluid rounded-3" style="max-height: 300px;" alt="Preview" />
                        <button type="button" id="removePreview" class="btn btn-sm btn-outline-danger mt-2">
                            <i class="bi bi-x-lg"></i> Remove
                        </button>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Content" class="form-label">Content</label>
                    <textarea asp-for="Content" class="form-control" rows="10" id="contentArea"
                              placeholder="Write your post content here..."></textarea>
                    <div class="word-counter" id="wordCount">0 words</div>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-lg"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-send"></i> Publish Post
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script src="~/js/post-form.js" asp-append-version="true"></script>
}