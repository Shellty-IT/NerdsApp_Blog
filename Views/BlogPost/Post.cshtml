@model PurrfectBlog.Models.BlogPost

@{
    ViewData["Title"] = Model.Title;
}


@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="BlogPost" asp-action="Posts">All Posts</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
        </ol>
    </nav>

    <article class="mb-5">
        <header class="mb-4">
            <h1 class="display-4 mb-3">@Model.Title</h1>
            
            <div class="text-muted">
                <span class="me-3">
                    <i class="bi bi-calendar3"></i>
                    @Model.CreatedDate.ToString("MMMM dd, yyyy 'at' h:mm tt")
                </span>
                
                @if (!string.IsNullOrEmpty(Model.Category))
                {
                    <span class="badge bg-primary">@Model.Category</span>
                }
            </div>

            @if (Model.ModifiedDate.HasValue)
            {
                <small class="text-muted d-block mt-2">
                    Last updated: @Model.ModifiedDate.Value.ToString("MMMM dd, yyyy")
                </small>
            }
        </header>

        <hr class="my-4">

        <div class="post-content">
            @Html.Raw(Model.Content.Replace("\n", "<br>"))
        </div>

        <div class="mt-4 d-flex gap-2">
            <a asp-controller="BlogPost" 
               asp-action="EditPost" 
               asp-route-id="@Model.Id" 
               class="btn btn-warning">
                <i class="bi bi-pencil-square"></i> Edit
            </a>
            <button type="button" 
                    class="btn btn-danger" 
                    onclick="confirmDelete(@Model.Id)">
                <i class="bi bi-trash"></i> Delete
            </button>
        </div>
    </article>

    <div class="d-flex justify-content-between mt-5 pt-3 border-top">
        <a asp-controller="BlogPost" asp-action="Posts" class="btn btn-outline-secondary">
            ← Back to All Posts
        </a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
            Home
        </a>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(postId) {
            if (confirm('Are you sure you want to delete this post? This action cannot be undone.')) {
                window.location.href = '/BlogPost/DeletePost/' + postId;
            }
        }
    </script>
}